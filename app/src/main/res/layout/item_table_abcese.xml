<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:layout_margin="5dp">    <TableRow        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:background="@drawable/bg_row_tabe"        android:padding="5dp">        <TextView            android:id="@+id/txtTableLayoutSubject"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="0.25"            android:fontFamily="@font/roboto_bold"            android:gravity="center"            android:text="Subject"            android:textColor="@color/purple_200"            android:textSize="16sp" />        <ImageView            android:id="@+id/imgTableLayoutFound"            android:src="@drawable/ic_check_true"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="0.25"            android:gravity="center" />        <TextView            android:id="@+id/txtTableLayoutDate"            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_weight="0.25"            android:fontFamily="@font/roboto_regular"            android:gravity="center"            android:text="Date"            android:textColor="@color/black"            android:textSize="16sp" />    </TableRow></LinearLayout>