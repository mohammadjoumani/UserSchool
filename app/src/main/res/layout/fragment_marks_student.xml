<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/gray"    tools:context=".view.fragment.MarksStudentFragment">    <ProgressBar        android:id="@+id/progressBarMarksStudentFragment"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:visibility="gone"/>    <ImageView        android:id="@+id/imgMarksStudentFragmentEmpty"        android:layout_width="220dp"        android:layout_height="220dp"        android:layout_centerInParent="true"        android:src="@drawable/ic_empty"        android:visibility="gone" />    <RelativeLayout        android:id="@+id/toolBarFragmentHome"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="15dp">        <TextView            android:id="@+id/txtFragmentHomeNameFragment"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/roboto_medium"            android:text="Marks"            android:textColor="@color/black"            android:textSize="26sp" />        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:src="@drawable/ic_account_focusedd"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"/>    </RelativeLayout>    <TableLayout        android:id="@+id/tableLayoutMarksFragment"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:layout_below="@id/toolBarFragmentHome"        android:visibility="visible">        <TableRow            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:padding="10dp"            android:layout_marginStart="10dp"            android:layout_marginEnd="10dp"            android:background="@drawable/bg_button_sin_in">            <TextView                android:id="@+id/txtTableLayoutSubject"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Subject"                android:textColor="@color/white"                android:textSize="16sp" />            <TextView                android:id="@+id/txtTableLayoutPractical"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Practical"                android:textColor="@color/white"                android:textSize="16sp" />            <TextView                android:id="@+id/txtTableLayoutThearitical"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Thearitical"                android:textColor="@color/white"                android:textSize="16sp" />            <TextView                android:id="@+id/txtTableLayoutSum"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Sum"                android:textColor="@color/white"                android:textSize="16sp" />        </TableRow>    </TableLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerFragmentMarksStudent"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_below="@+id/tableLayoutMarksFragment"        android:layout_marginStart="10dp"        android:layout_marginEnd="5dp"        android:layout_marginTop="5dp"        android:orientation="vertical"        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"        tools:listitem="@layout/item_table_marks" /></RelativeLayout>