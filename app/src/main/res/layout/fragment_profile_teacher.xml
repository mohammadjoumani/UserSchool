<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".view.fragment.ProfileTeacherFragment"    android:background="@color/gray">    <RelativeLayout        android:id="@+id/toolBarFragmentHome"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="15dp">        <TextView            android:id="@+id/txtFragmentHomeNameFragment"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/roboto_medium"            android:text="Profile"            android:textColor="@color/black"            android:textSize="26sp" />        <ImageView            android:layout_width="35dp"            android:layout_height="35dp"            android:src="@drawable/ic_account_focusedd"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"/>    </RelativeLayout>    <LinearLayout        android:id="@+id/linearContentInfoTeacher"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:visibility="gone"        android:layout_below="@+id/toolBarFragmentHome">        <ImageView            android:id="@+id/imgProfileTeacherFragmentProfile"            android:layout_width="150dp"            android:layout_height="150dp"            android:layout_below="@+id/toolBarFragmentHome"            android:layout_centerHorizontal="true"            android:layout_marginTop="20dp"            android:scaleType="centerCrop"            android:layout_gravity="center"            android:src="@drawable/ic_teacher" />        <RelativeLayout            android:id="@+id/rel1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="30dp">            <ImageView                android:id="@+id/imgIconAccount"                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_marginStart="10dp"                android:layout_marginEnd="20dp"                android:src="@drawable/ic_account" />            <TextView                android:id="@+id/txtNameAccount"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_toEndOf="@+id/imgIconAccount"                android:fontFamily="@font/roboto_regular"                android:text="@string/name"                android:textColor="@color/colorPrimaryDark"                android:textSize="14sp" />            <TextView                android:id="@+id/txtNameAccountFragmentProfileTeacher"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtNameAccount"                android:layout_toEndOf="@+id/imgIconAccount"                android:fontFamily="@font/roboto_medium"                android:text="Teacher"                android:textColor="@color/black"                android:textSize="18sp" />            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_below="@id/txtNameAccountFragmentProfileTeacher"                android:layout_marginStart="30dp"                android:layout_marginTop="25dp"                android:layout_marginEnd="25dp"                android:background="@color/colorPrimaryDark" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/rel4"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="25dp">            <ImageView                android:id="@+id/imgIconClass"                android:layout_width="35dp"                android:layout_height="35dp"                android:layout_marginStart="10dp"                android:layout_marginEnd="20dp"                android:src="@drawable/ic_class" />            <TextView                android:id="@+id/txtClassAccount"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_toEndOf="@+id/imgIconClass"                android:fontFamily="@font/roboto_regular"                android:text="Subject"                android:textColor="@color/colorPrimaryDark"                android:textSize="14sp" />            <TextView                android:id="@+id/txtSubjectFragmentProfileTeacher"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtClassAccount"                android:layout_toEndOf="@+id/imgIconClass"                android:fontFamily="@font/roboto_regular"                android:text="subject"                android:textColor="@color/black"                android:textSize="18sp" />            <View                android:layout_width="match_parent"                android:layout_height="2dp"                android:layout_below="@id/txtSubjectFragmentProfileTeacher"                android:layout_marginStart="30dp"                android:layout_marginTop="25dp"                android:layout_marginEnd="25dp"                android:background="@color/colorPrimaryDark" />        </RelativeLayout>    </LinearLayout>    <ProgressBar        android:id="@+id/progressBarTeacherProfileFragment"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:visibility="gone"/>    <ImageView        android:id="@+id/imgFragmentTeacherProfileEmpty"        android:layout_width="220dp"        android:layout_height="220dp"        android:layout_centerInParent="true"        android:src="@drawable/ic_server_down"        android:visibility="gone" /></RelativeLayout>