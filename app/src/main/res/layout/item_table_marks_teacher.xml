<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    android:orientation="vertical">    <TableRow        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@drawable/bg_row_tabe"        android:orientation="horizontal"        android:padding="10dp">        <TextView            android:id="@+id/txtrecyclerFragmentMarksTeacherStudent"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="0.25"            android:fontFamily="@font/roboto_bold"            android:gravity="center"            android:text="Student"            android:textColor="@color/purple_200"            android:textSize="16sp" />        <EditText            android:id="@+id/edtrecyclerFragmentMarksTeacherPractical"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="0.25"            android:fontFamily="@font/roboto_regular"            android:gravity="center"            android:hint="Practical"            android:background="@drawable/bg_editetext_re"            android:textSize="12sp"            android:inputType="number"            android:layout_marginStart="10dp"/>        <EditText            android:id="@+id/edtrecyclerFragmentMarksTeacherThearitical"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="0.25"            android:fontFamily="@font/roboto_regular"            android:gravity="center"            android:hint="Thearitical"            android:background="@drawable/bg_editetext_re"            android:textSize="12sp"            android:layout_marginStart="10dp"            android:inputType="number"/>    </TableRow></LinearLayout>