<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="5dp"    android:clickable="true"    android:elevation="8dp"    android:focusable="true"    android:foreground="?attr/selectableItemBackground"    app:cardCornerRadius="10dp">    <RelativeLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:background="@color/white">        <RelativeLayout            android:id="@+id/relativeRecyclerClass"            android:layout_width="90dp"            android:layout_height="90dp"            android:layout_marginEnd="5dp"            android:background="#50bebf">            <ImageView                android:id="@+id/imgRecyclerClass"                android:layout_width="90dp"                android:layout_height="90dp"                android:layout_centerHorizontal="true"                android:src="@drawable/ic_class_recycler" />        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginEnd="10dp"            android:layout_toEndOf="@+id/relativeRecyclerClass">            <TextView                android:id="@+id/txtRecyclerClassNameClass"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginBottom="15dp"                android:fontFamily="@font/roboto_regular"                android:text="Name Class:"                android:textColor="@color/black"                android:textSize="18sp" />            <TextView                android:id="@+id/txtRecyclerClassName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginStart="5dp"                android:layout_marginBottom="15dp"                android:layout_toEndOf="@+id/txtRecyclerClassNameClass"                android:fontFamily="@font/roboto_medium"                android:text="First"                android:textColor="@color/black"                android:textSize="18sp" />            <TextView                android:id="@+id/txtRecyclerClassNumberStudent"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerClassNameClass"                android:fontFamily="@font/roboto_regular"                android:text="Number Student:"                android:textSize="12sp"                android:textColor="@color/black" />            <TextView                android:id="@+id/txtRecyclerClassNumber"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_below="@+id/txtRecyclerClassNameClass"                android:layout_marginStart="5dp"                android:layout_toEndOf="@+id/txtRecyclerClassNumberStudent"                android:fontFamily="@font/roboto_medium"                android:text="10"                android:textSize="12sp"                android:textColor="@color/black" />        </RelativeLayout>    </RelativeLayout></androidx.cardview.widget.CardView>