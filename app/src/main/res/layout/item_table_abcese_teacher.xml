<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:layout_margin="5dp">    <TableRow        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:background="@drawable/bg_row_tabe"        android:padding="5dp">        <TextView            android:id="@+id/txtTableLayoutStudentName"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:fontFamily="@font/roboto_bold"            android:gravity="center"            android:text="Student"            android:textColor="@color/colorPurple"            android:textSize="16sp" />        <CheckBox            android:id="@+id/checkboxTableLayoutIsFound"            android:layout_width="0dp"            android:text="@null"            android:layout_height="match_parent"            android:layout_marginStart="50dp"            android:layout_weight="0.5"            android:layout_gravity="center"            android:buttonTint="@color/colorPurple" />    </TableRow></LinearLayout>