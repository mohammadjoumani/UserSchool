<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorGray"    tools:context=".view.fragment.AbseceTeacherFragment">    <ProgressBar        android:id="@+id/progressBarAbseceTeacherFragment"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:visibility="gone"/>    <ImageView        android:id="@+id/imgAbseceTeacherFragmentEmpty"        android:layout_width="220dp"        android:layout_height="220dp"        android:layout_centerInParent="true"        android:src="@drawable/ic_empty"        android:visibility="gone" />    <RelativeLayout        android:id="@+id/toolBarFragmentHome"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="15dp">        <TextView            android:id="@+id/txtFragmentHomeNameFragment"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:fontFamily="@font/roboto_medium"            android:text="Absece "            android:layout_centerVertical="true"            android:textColor="@color/colorBlack"            android:textSize="26sp" />        <ImageButton            android:id="@+id/imgBtnAbseceTeacherFragmentNew"            android:layout_width="35sp"            android:layout_height="35sp"            android:background="@drawable/ic_add"            android:layout_alignParentEnd="true"            android:layout_centerVertical="true"/>    </RelativeLayout>    <TableLayout        android:id="@+id/tableLayoutAbseceTeacherFragment"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:layout_below="@id/toolBarFragmentHome"        android:visibility="visible">        <TableRow            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:padding="10dp"            android:layout_marginStart="10dp"            android:layout_marginEnd="10dp"            android:background="@drawable/bg_button_sin_in">            <TextView                android:id="@+id/txtTableLayoutName"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Name"                android:textColor="@color/colorWhite"                android:textSize="16sp" />            <TextView                android:id="@+id/txtTableLayoutFound"                android:layout_width="0dp"                android:layout_height="match_parent"                android:layout_weight="0.25"                android:fontFamily="@font/roboto_bold"                android:gravity="center"                android:text="Found"                android:textColor="@color/colorWhite"                android:textSize="16sp" />        </TableRow>    </TableLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recyclerAbseceTeacherFragment"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_below="@+id/tableLayoutAbseceTeacherFragment"        android:layout_marginStart="10dp"        android:layout_marginEnd="5dp"        android:layout_marginTop="5dp"        android:orientation="vertical"        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"        tools:listitem="@layout/item_table_abcese_teacher" />    <ImageView        android:id="@+id/imgAbseceTeacherFragmentDone"        android:layout_width="220dp"        android:layout_height="220dp"        android:src="@drawable/ic_done"        android:layout_centerInParent="true"        android:visibility="gone"/>    <TextView        android:id="@+id/txtAbseceTeacherFragment"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Press to button Add to get Absece"        android:layout_centerInParent="true"        android:textSize="20sp"        android:visibility="gone"        android:textColor="@color/colorBlack"        android:fontFamily="@font/roboto_regular"        android:layout_below="@+id/imgAbseceTeacherFragmentDone"/></RelativeLayout>